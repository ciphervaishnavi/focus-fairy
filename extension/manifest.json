{
  "manifest_version": 3,
  "name": "Focus Fairy",
  "version": "1.0",
  "description": "A cute AI fairy companion to help you stay focused!",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.facebook.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.reddit.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Fairy üßö‚Äç‚ôÄÔ∏è"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.youtube.com/*",
      "*://*.instagram.com/*",
      "*://*.facebook.com/*",
      "*://*.twitter.com/*",
      "*://*.x.com/*",
      "*://*.reddit.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": ["images/*"],
    "matches": ["<all_urls>"]
  }]
}